<odoo>
    <data>
        <record id="view_ars_report_pivot" model="ir.ui.view">
             <field name="name">ars.report.pivot</field>
             <field name="model">ars.report</field>
             <field name="arch" type="xml">
                 <pivot string="Reporte de Ars" disable_linking="True">
                     <field name="ars" type="row"/>
                     <field name="date" type="col"/>
                     <field name="monto" type="measure"/>
                 </pivot>
             </field>
        </record>

        <record id="view_ars_report_tree" model="ir.ui.view">
             <field name="name">ars.report.tree</field>
             <field name="model">ars.report</field>
             <field name="type">tree</field>
             <field name="arch" type="xml">
                 <tree string="Reporte de Ars" disable_linking="True">
                     <field name="date"/>
                     <field name="ars"/>
                     <field name="afil"/>
                     <field name="partner_id"/>
                     <field name="auth"/>
                     <field name="monto"/>
                     <field name="settled"/>
                 </tree>
             </field>
        </record>

        <record id="view_ars_report_search" model="ir.ui.view">
            <field name="name">ars.report.search</field>
            <field name="model">ars.report</field>
            <field name="arch" type="xml">
                <search string="Busqueda Ars">
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="group_ars" string="ARS" context="{'group_by': 'ars'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_ars_report_all" model="ir.actions.act_window">
            <field name="name">Reporte de Arss</field>
            <field name="res_model">ars.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,pivot</field>
            <field name="context">{'search_default_group_ars': 1}</field>
            <field name="help">En este reporte se ve el detalle de ars y coberturas por clientes.</field>
        </record>

        <menuitem
                name="Reporte de Arss"
                action="action_ars_report_all"
                id="menu_action_ars_report_all"
                parent="account.account_reports_business_intelligence_menu"
                sequence="20"/>
    </data>
</odoo>