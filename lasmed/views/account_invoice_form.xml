<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      <record id="view_medical_fields_invoice" model="ir.ui.view">
            <field name="name">medical.fields.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="tipo_seguro" readonly="0"/>
                    <field name="ars"
                           attrs="{'invisible':[('tipo_seguro','!=',('insured'))],'required':[('tipo_seguro','=',('insured'))]}"
                    />
                    <field name="afiliacion"
                           attrs="{'invisible':[('ars','=',False)],'required':[('ars','!=',False)]}"/>
                    <field name="auth_num"
                           attrs="{'invisible':[('ars','=',False)],'required':[('ars','!=',False)]}"/>
                </field>
                <field name="amount_tax" position="after">
                    <field name="cober"
                           attrs="{
                           'invisible': [('ars', '=', False)],
                           'readonly': [('state','not in','draft')]
                           }"/>
                    <field name="discount"
                           attrs="{
                           'readonly': [('state','not in','draft')]
                           }"/>
                </field>
                <field name="amount_total" position="replace">
                    <field name="cober_diference" class="oe_subtotal_footer_separator" readonly="1"/>
                </field>
                <field name="invoice_line_ids" position="attributes">
                    <attribute name="context">{'ars_id': ars}</attribute>
                </field>
            </field>
      </record>
      <record id="is_settled_tree" model="ir.ui.view">
            <field name="name">is.settled.fields.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="settled" widget="boolean_toggle"/>
                </field>
                <field name="amount_total_signed" position="replace">
                    <field name="amount_total_signed" string="Total a pagar" sum="Total a pagar"/>
                </field>
                <field name="residual_signed" position="before">
                    <field name="amount_cober_total" sum="Total"/>
                    <field name="cober" string="Cobertura Seguro" sum="Total Seguro"/>
                    <field name="discount" string="Descuento" sum="Total Discount"/>
                </field>
            </field>
      </record>
  </data>
</odoo>